<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Keseluruhan Data"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/primary"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--- DATA BUKU ---"
                android:textStyle="bold"
                android:textColor="#444444"
                android:paddingTop="10dp"/>
            <TextView android:id="@+id/tvRiwayatBuku" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Memuat data..."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--- DATA ANGGOTA ---"
                android:textStyle="bold"
                android:textColor="#444444"
                android:paddingTop="20dp"/>
            <TextView android:id="@+id/tvRiwayatAnggota" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Memuat data..."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--- DATA TRANSAKSI ---"
                android:textStyle="bold"
                android:textColor="#444444"
                android:paddingTop="20dp"/>
            <TextView android:id="@+id/tvRiwayatTrans" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Memuat data..."/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBackRiwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Menu"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary"/>
</LinearLayout>